<% provide(:title, "El Tablero de Otto | Actualizar desde Orden de Compra") %>
<div class="row wrapper border-bottom white-bg page-heading breadcrumbs-margin">
  <div class="col-lg-12">
    <h2>Actualizar desde Orden de compra</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li>
        <a href="<%= url_for :controller => 'inventories', :action => 'index' %>">Almac√©n</a>
      </li>
      <li class="active">
        <strong>Actualizar desde Orden de compra</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row breadcrumbs-margin">
  	<div class="col-xl-12 col-lg-12 col-md-12 col-12 col-sm-12">
      <div class="ibox float-e-margins">
     	  <div class="ibox-title">
    	    <h3>Actualizar desde Orden de compra</h3>
    	  </div>
    	  <div class="ibox-content">
          <div id='content' class='table-responsive col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding search-results'>
            <table class="table-stripped table-bordered table footable">
              <thead>
                <tr>
                  <th>Nro, OC</th>
                  <th>Proveedor</th>
                  <th>Fecha</th>
                  <th>Fecha Despacho</th>
                  <th>Monto</th>
                </tr>
              </thead>
              <tbody>
                <% @purchase_orders.each do |pod| %>
                  <tr>
                    <td align="center"><%= pod.order_number %></td>
                    <td align="center"><%= Supplier.find(pod.supplier_id).name %></td>
                    <td align="center"><%= pod.order_date %></td>
                    <td align="center"><%= pod.delivery_date %></td>
                    <td align="center"><%= pod.ammount %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
      	  </div>
          <%= button_to 'Volver', { action: 'index'}, method: :get, class: 'btn btn-w-m btn-info' %>
        </div>
      </div>
	  </div>
  </div>	
</div>

<%= javascript_tag "oc = #{@purchase_orders.to_json.html_safe};" %>