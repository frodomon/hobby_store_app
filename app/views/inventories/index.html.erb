<% provide(:title, "El Tablero de Otto | Inventario") %>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Inventario</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li class="active">
        <strong>Inventario</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row breadcrumbs-margin">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Inventario</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Lote', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>Fecha de Entrada</th>
                  <th>Fecha de Lanzamiento</th>
                  <th>Almacén</th>
                  <th>Ver</th>
                  <th>Editar</th>
                  <th>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                <% @inventories.each do |inventory| %>
                  <tr>
                    <td align="center"><%= Product.find(inventory.product_id).name %></td>
                    <td align="center"><%= inventory.quantity %></td>
                    <td align="center"><%= inventory.registration_date %></td>
                    <td align="center"><%= inventory.release_date %></td>
                    <td align="center"><%= Warehouse.find(inventory.warehouse_id).shortname %></td>
                    <td align="center"><%= link_to 'Ver',{ action: 'show', id: inventory.id}, class: 'btn btn-w-m btn-success btn-xs' %></td>
                    <td align="center"><%= link_to 'Editar', { action: 'edit', id: inventory.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td align="center"><%= link_to 'Eliminar', { action: 'destroy', id: inventory.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable','Inventario');
    });
  </script>
<% end %>