<% provide(:title, "El Tablero de Otto | Crédito en Tienda") %>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Crédito en Tienda</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li class="active">
        <strong>Crédito en Tienda</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row breadcrumbs-margin">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Crédito en Tienda</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Crédito en Tienda', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th>Usuario</th>
                  <th>Monto</th>
                  <th>Detalle</th>
                  <th>Fecha</th>
                  <th>Ver</th>
                  <th>Editar</th>
                  <th>Eliminar</th>
                </tr>
              </thead>

              <tbody>
                <% @store_credits.each do |store_credit| %>
                  <tr>
                    <td align="center"><%= User.find(store_credit.user_id).name %></td>
                    <td align="center"><%= store_credit.ammount %></td>
                    <td align="center"><%= store_credit.detail %></td>
                    <td align="center"><%= store_credit.credit_date %></td>
                    <td align="center"><%= link_to 'Ver',{ action: 'show', id: store_credit.id}, class: 'btn btn-w-m btn-success btn-xs' %></td>
                    <td align="center"><%= link_to 'Editar', { action: 'edit', id: store_credit.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td align="center"><%= link_to 'Eliminar', { action: 'destroy', id: store_credit.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable','Crédito en Tienda');
    });
  </script>
<% end %>