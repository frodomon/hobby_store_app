<p id="notice"><%= notice %></p>

<h1>Purchase Order Details</h1>

<table>
  <thead>
    <tr>
      <th>Purchase order</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_order_details.each do |purchase_order_detail| %>
      <tr>
        <td><%= purchase_order_detail.purchase_order %></td>
        <td><%= purchase_order_detail.product %></td>
        <td><%= purchase_order_detail.quantity %></td>
        <td><%= purchase_order_detail.unit_price %></td>
        <td><%= purchase_order_detail.subtotal %></td>
        <td><%= link_to 'Show', purchase_order_detail %></td>
        <td><%= link_to 'Edit', edit_purchase_order_detail_path(purchase_order_detail) %></td>
        <td><%= link_to 'Destroy', purchase_order_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

