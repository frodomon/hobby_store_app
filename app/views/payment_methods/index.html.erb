<% provide(:title, "El Tablero de Otto | Métodos de Pago") %>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Métodos de Pago</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li class="active">
        <strong>Métodos de Pago</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row breadcrumbs-margin">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Métodos de Pago</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Método de Pago', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Ver</th>
                  <th>Editar</th>
                  <th>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                <% @payment_methods.each do |payment_method| %>
                  <tr>
                    <td align="center"><%= payment_method.name %></td>
                    <td align="center"><%= link_to 'Ver',{ action: 'show', id: payment_method.id}, class: 'btn btn-w-m btn-success btn-xs' %></td>
                    <td align="center"><%= link_to 'Editar', { action: 'edit', id: payment_method.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td align="center"><%= link_to 'Eliminar', { action: 'destroy', id: payment_method.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable','Métodos de Pago');
    });
  </script>
<% end %>
<%= link_to 'New Payment Method', new_payment_method_path %>
