<% provide(:title, "El Tablero de Otto | Productos") %>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Productos</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li class="active">
        <strong>Productos</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row breadcrumbs-margin">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Productos</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Productos', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Nombre Corto</th>
                  <th>Barcode</th>
                  <th>SKU</th>
                  <th>Categoría</th>
                  <th>Sub categoría</th>
                  <th>Precio Full</th>
                  <th>Precio Pre-Venta</th>
                  <th>Precio Otto</th>
                  <th>Tipo de Juego</th>
                  <th>Estilo de Juego</th>
                  <th>Tématica</th>
                  <th>Edad Sugerida</th>
                  <th>Jugadores Sugeridos</th>
                  <th>Duración de la partida</th>
                  <th>Línea de Juegos</th>
                  <th>Ranking BGG</th>
                  <th>Editar</th>
                  <th>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr>
                    <td align="center"><%= product.name %></td>
                    <td align="center"><%= product.short_name %></td>
                    <td align="center"><%= product.barcode %></td>
                    <td align="center"><%= product.sku %></td>
                    <td align="center"><%= Category.find(product.category_id).name %></td>
                    <td align="center"><%= SubCategory.find(product.sub_category_id).name %></td>
                    <td align="center"><%= product.full_price %></td>
                    <td align="center"><%= product.presale_price %></td>
                    <td align="center"><%= product.otto_price %></td>
                    <td align="center"><%= GameType.find(product.game_type_id).name %></td>
                    <td align="center"><%= GameStyle.find(product.game_style_id).name %></td>
                    <td align="center"><%= Thematic.find(product.thematic_id).name %></td>
                    <td align="center"><%= SuggestedAge.find(product.suggested_age_id).name %></td>
                    <td align="center"><%= product.suggested_players %></td>
                    <td align="center"><%= product.game_duration %></td>
                    <td align="center"><%= GameLine.find(product.game_line_id).name %></td>
                    <td align="center"><%= product.ranking_bgg %></td>
                    <td align="center"><%= link_to 'Editar', { action: 'edit', id: product.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td align="center"><%= link_to 'Eliminar', { action: 'destroy', id: product.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable','Productos');
    });
  </script>
<% end %>
