<%= form_for @product, local: true, html: { id: "submit-form"  } do |f| %>
  <%= form_errors_for @product %>

  <div class="row">
    <div class= "<%= field_class(@product, :name) %> col-lg-6 col-md-6 col-sm-6">
      <%= f.label :name, "Nombre", class: 'control-label' %>
      <%= f.text_field :name, placeholder: "Nombre del Producto", class: 'form-control' %>
    </div>
    <div class= "<%= field_class(@product, :short_name) %> col-lg-6 col-md-6 col-sm-6">
      <%= f.label :short_name, "Nombre Corto", class: 'control-label' %>
      <%= f.text_field :short_name, placeholder: "Nombre Corto", class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class= "<%= field_class(@product, :barcode) %> col-lg-6 col-md-6 col-sm-6">
      <%= f.label :barcode, "Código de Barras", class: 'control-label' %>
      <%= f.text_field :barcode, placeholder: "Código de Barras", class: 'form-control' %>
    </div>
    <div class= "<%= field_class(@product, :sku) %> col-lg-6 col-md-6 col-sm-6">
      <%= f.label :sku, "SKU", class: 'control-label' %>
      <%= f.text_field :sku, placeholder: "SKU", class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class= "<%= field_class(@product, :category_id) %> col-lg-6 col-md-6 col-sm-6">
      <%= f.label :category_id, "Categoría", class: 'control-label' %>
      <%= f.collection_select :category_id, Category.order(:name), :id, :name, options = { :prompt => 'Seleccione una Categoría'}, html_options = { class: 'form-select form-control', autofocus: true  } %>
    </div>
    <div class= "<%= field_class(@product, :sub_category_id) %> col-lg-6 col-md-6 col-sm-6">
      <%= f.label :sub_category_id, "Sub Categoŕía", class: 'control-label' %>
      <%= f.collection_select :sub_category_id, SubCategory.order(:name), :id, :name, options = { :prompt => 'Seleccione una Sub Categoría'}, html_options = { class: 'form-select form-control', autofocus: true  } %>
    </div>
  </div>
  <div class="row">
    <div class= "<%= field_class(@product, :short_description) %> col-lg-6 col-md-6 col-sm-6">
      <%= f.label :short_description, "Descripción Corta", class: 'control-label' %>
