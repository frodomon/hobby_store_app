    </div>
    <div class= "<%= field_class(@product, :large_description) %> col-lg-6 col-md-6 col-sm-6">
      <%= f.label :large_description, "Descripción Larga", class: 'control-label' %>
      <%= f.text_area :large_description, placeholder: "Descripción Larga", class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class= "<%= field_class(@product, :otto_price) %> col-lg-3 col-md-3 col-sm-3">
      <%= f.label :otto_price, "Precio de Compra", class: 'control-label' %>
      <%= f.text_field :otto_price, class: 'form-control' %>
    </div>
    <div class= "<%= field_class(@product, :full_price) %> col-lg-3 col-md-3 col-sm-3">
      <%= f.label :full_price, "Precio de Lista", class: 'control-label' %>
      <%= f.text_field :full_price, class: 'form-control' %>
    </div>
    <div class= "<%= field_class(@product, :presale_price) %> col-lg-3 col-md-3 col-sm-3">
      <%= f.label :presale_price, "Precio de Pre-Venta", class: 'control-label' %>
      <%= f.text_field :presale_price, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
