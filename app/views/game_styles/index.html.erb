<p id="notice"><%= notice %></p>

<h1>Game Styles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_styles.each do |game_style| %>
      <tr>
        <td><%= game_style.name %></td>
        <td><%= link_to 'Show', game_style %></td>
        <td><%= link_to 'Edit', edit_game_style_path(game_style) %></td>
        <td><%= link_to 'Destroy', game_style, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game Style', new_game_style_path %>
